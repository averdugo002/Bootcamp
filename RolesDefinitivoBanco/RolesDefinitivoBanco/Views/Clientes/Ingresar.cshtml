@model RolesDefinitivoBanco.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       <p> @Model.Balance </p>

       <form asp-action="Ingresar">

           <div class="form-group">
               <label class="control-label">Introduzca la cantidad a ingresar: </label>
               <input name="ingresoDinero" class="form-control" />
           </div>
           <div class="form-group">
               <input type="submit" value="Save" class="btn btn-primary" />
           </div>
           @if (ViewBag.Alert != null)
           {
               <div class="alert alert-dismissable alert-info">
                   <button type="button" class="close" data-dismiss="alert">
                       &times;
                   </button>
                   <strong>Aviso!</strong> @ViewBag.Alert
               </div>
           }
       </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
